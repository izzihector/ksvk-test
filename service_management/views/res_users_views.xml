<odoo>
    <record id="res_users_view_form_service" model="ir.ui.view">
            <field name="name">res.users.form.inherit.service</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='messaging']" position="after">
                    <group name="service">
                        <field name="default_service_fiscal_position_id"/>
                    </group>
                </xpath>
            </field>
    </record>
</odoo>